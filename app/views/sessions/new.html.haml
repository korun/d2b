=form_tag(sessions_path, class: 'form-horizontal') do
  .control-group
    =label_tag :email, User.human_attribute_name(:email), class: 'control-label'
    .controls=email_field_tag :email, params[:email]
  .control-group
    =label_tag :password, User.human_attribute_name(:password), class: 'control-label'
    .controls
      =password_field_tag :password
      =link_to 'Забыли пароль?', forgotten_password_path
  .form-actions
    =submit_tag "Войти", class: 'btn'
    =link_to "Регистрация", registration_path, class: 'btn btn-info'
